@model int?


<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.Label("Imię")
                @Html.Editor("firstName")
            </div>
            <div class="form-group">
                @Html.Label("Nazwisko")
                @Html.Editor("lastName")
            </div>

            <div class="form-group">
                <input type="submit" value="Sprawdź punkty" class="btn btn-primary"/>
            </div>
        }
    </div>
</div>

@{ 
    if(Model.HasValue)
            {
                @Html.Label(Model.ToString())
            }
}
